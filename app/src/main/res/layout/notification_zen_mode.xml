<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/NotificationTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zen_mode_switch"
            style="@style/TextAppearance.Compat.Notification.Title" />

        <TextView
            android:id="@+id/textViewZen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zen_mode_close"
            style="@style/TextAppearance.Compat.Notification" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonZen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="0dp"
        android:layout_weight="0"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:contentDescription="@string/zen_mode_switch"
        android:focusable="true"
        android:foregroundGravity="center"
        android:padding="0dp" />
        <!-- 按钮图标在代码里设置 -->

</LinearLayout>
