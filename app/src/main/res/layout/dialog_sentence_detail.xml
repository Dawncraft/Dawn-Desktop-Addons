<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/abc_dialog_padding_top_material"
    android:paddingHorizontal="@dimen/abc_dialog_padding_material">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/sentence"
                android:textSize="16sp" />

            <Space android:layout_width="8dp" />

            <TextView
                android:id="@+id/textViewSentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                tools:text="沉舟侧畔千帆过，病树前头万木春。\n沉舟侧畔千帆过，病树前头万木春。\n沉舟侧畔千帆过，病树前头万木春。\n多行句子测试" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowAuthor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/sentence_author"
                android:textSize="16sp" />

            <Space android:layout_width="8dp" />

            <TextView
                android:id="@+id/textViewAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                tools:text="刘禹锡" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowFrom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/sentence_from"
                android:textSize="16sp" />

            <Space android:layout_width="8dp" />

            <TextView
                android:id="@+id/textViewFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                tools:text="《酬乐天扬州初逢席上见赠》" />
        </TableRow>

    </TableLayout>

</ScrollView>
